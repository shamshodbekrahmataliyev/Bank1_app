<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.OverviewFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@drawable/menu_shape"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginStart="80dp"
                android:text="Account Overview"
                android:textColor="@color/white"
                android:textSize="30sp"
                android:textStyle="normal" />

        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:layout_width="118dp"
            android:layout_height="120dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-20dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/img" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20sp"
            android:text="Total Balance"
            android:textColor="#8C8383"
            android:textSize="22sp"
            android:textStyle="normal" />

        <androidx.cardview.widget.CardView
            android:layout_width="330dp"
            android:layout_height="190dp"
            android:layout_gravity="center"
            android:layout_marginTop="30dp"
            android:backgroundTint="@color/color1"
            app:cardCornerRadius="20dp"
            app:cardElevation="20dp">

            <!--            <ImageView-->
            <!--                android:layout_width="60dp"-->
            <!--                android:layout_height="60dp"-->
            <!--                android:src=""/>-->

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-56dp"
                android:text="$ 56,634.12"
                android:textColor="@color/bluedark"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="-30dp"
                android:text="+122423 compared to 30 days ago"
                android:textColor="#706868"
                android:textSize="10sp"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/appcompat_2"
                android:text="Add Funds"
                android:textColor="@color/white"
                android:textStyle="normal" />

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="130dp"
                android:layout_height="40dp"
                android:layout_marginStart="170dp"
                android:layout_marginTop="120dp"
                android:background="@drawable/appcompat_1"
                android:text="Send Money"
                android:textColor="@color/bluedark"
                android:textStyle="normal" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:text="Transactions"
            android:textColor="#979393"
            android:textSize="20sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/transaction"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_marginStart="330dp"
            android:layout_marginTop="-24dp"
            android:src="@drawable/arrow"
            app:tint="#979393" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="114dp"
                android:layout_marginStart="-126dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/color1"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="July 1st"
                    android:textColor="@color/white" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="-$ 1,500"
                    android:textColor="#EF0000"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="James Oliver"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="#989292"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/oval"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="120dp"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="120dp"
                android:layout_marginTop="10dp"
                app:cardCornerRadius="0dp"
                app:cardElevation="10dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/img" />

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="150dp"
                android:layout_height="114dp"
                android:layout_marginStart="-126dp"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/color1"
                app:cardCornerRadius="10dp"
                app:cardElevation="1dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="2dp"
                    android:text="July 1st"
                    android:textColor="@color/white" />



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="+$ 650"
                    android:textColor="@color/bluedark"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="James Oliver"
                    android:textSize="14sp"
                    android:textStyle="normal"
                    android:textColor="#989292"
                    android:layout_gravity="center"
                    android:layout_marginTop="20dp"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:src="@drawable/oval"
                    android:layout_marginTop="90dp"
                    android:layout_marginStart="120dp"
                    app:tint="@color/white" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>